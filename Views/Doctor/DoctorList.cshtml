@model DataTable;
@using System.Data;

<div class="page-header text-center">
    <div class="container">
        <h1 class="page-title">
            <i class="bi bi-person-badge me-3"></i>
            Doctor Management
        </h1>
        <p class="page-subtitle">Manage medical professionals and their information</p>
    </div>
</div>

<div class="search-filter-bar animate-fade-in-up">
    <div class="search-input">
        <div class="input-group">
            <span class="input-group-text"><i class="bi bi-search"></i></span>
            <input type="text" class="form-control" placeholder="Search doctors by name, specialization, or email..." id="searchInput">
        </div>
    </div>
    <a asp-controller="Doctor" asp-action="DoctorAdd_Edit" class="btn btn-success">
        <i class="bi bi-plus-circle me-2"></i>
        Add New Doctor
    </a>
</div>

<div class="row animate-slide-in-right">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div>
                                <h5 class="card-title mb-1">Medical Professionals</h5>
                                <p class="text-muted mb-0">Total: @Model.Rows.Count doctors</p>
                            </div>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-modern" id="doctorsTable">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th>Contact</th>
                                        <th>Specialization</th>
                                        <th>Qualification</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Rows.Count == 0)
                                    {
                                        <tr>
                                            <td colspan="7" class="text-center py-5">
                                                <div class="empty-state">
                                                    <i class="bi bi-person-badge-fill"></i>
                                                    <h3>No Doctors Found</h3>
                                                    <p>Start by adding medical professionals to the system.</p>
                                                    <a asp-controller="Doctor" asp-action="DoctorAdd_Edit" class="btn btn-success">
                                                        <i class="bi bi-plus-circle me-2"></i>Add First Doctor
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                    @foreach (DataRow row in Model.Rows)
                                    {
                                        <tr>
                                            <td>@row["DoctorId"]</td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="icon-wrapper me-3" style="width: 40px; height: 40px; background: linear-gradient(135deg, var(--success-500), var(--success-400));">
                                                        <i class="bi bi-person-badge text-white"></i>
                                                    </div>
                                                    <div>
                                                        <div class="fw-semibold">Dr. @row["Name"]</div>
                                                        <small class="text-muted">ID: @row["DoctorID"]</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <div>
                                                    <div class="fw-medium">@row["Email"]</div>
                                                    <small class="text-muted">@row["Phone"]</small>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="status-badge" style="background-color: var(--success-100); color: var(--success-700);">
                                                    @row["Specialization"]
                                                </span>
                                            </td>
                                            <td>
                                                <span class="fw-medium">@row["Qualification"]</span>
                                            </td>
                                            <td>
                                                @if (Convert.ToBoolean(row["IsActive"]))
                                                {
                                                    <span class="status-badge status-active">
                                                        <i class="bi bi-check-circle me-1"></i>Active
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="status-badge status-inactive">
                                                        <i class="bi bi-x-circle me-1"></i>Inactive
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                <div class="action-buttons">
                                                    <a class="btn btn-warning btn-icon"
                                                   asp-controller="Doctor"
                                                   asp-action="DoctorAdd_Edit"
                                                       asp-route-id="@row["DoctorID"]"
                                                       title="Edit Doctor">
                                                        <i class="bi bi-pencil"></i>
                                                </a>
                                                    <a class="btn btn-danger btn-icon"
                                                   asp-controller="Doctor"
                                                   asp-action="DoctorDelete"
                                                   asp-route-id="@row["DoctorID"]"
                                                       onclick="return confirm('Are you sure you want to delete this doctor?');"
                                                       title="Delete Doctor">
                                                        <i class="bi bi-trash"></i>
                                                </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
</div>

@section Scripts {
    <script>
        // Search functionality
        document.getElementById('searchInput').addEventListener('keyup', function() {
            const searchTerm = this.value.toLowerCase();
            const tableRows = document.querySelectorAll('#doctorsTable tbody tr');
            
            tableRows.forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(searchTerm) ? '' : 'none';
            });
        });
    </script>
}
