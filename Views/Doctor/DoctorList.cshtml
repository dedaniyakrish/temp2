@model DataTable;
@using System.Data;

<style>
    table td,
    table th {
        white-space: nowrap; 
        vertical-align: middle;
    }
</style>

<main id="main" class="main ms-1">

    <section class="section pt-5 mt-4">
        <div class="row">
            <div class="col-12">

                <div class="card shadow">
                    <div class="card-body">
                        <h5 class="card-title text-primary">Doctor List</h5>

                        <div class="mb-3 text-end">
                            <a asp-controller="Doctor" asp-action="DoctorAdd_Edit" class="btn btn-success btn-sm">
                                Add New
                            </a>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-bordered table-hover text-center align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>#</th>
                                        <th>Name</th>
                                        <th>Phone</th>
                                        <th>Email</th>
                                        <th>Qualification</th>
                                        <th>Specialization</th>
                                        <th>Created</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (DataRow row in Model.Rows)
                                    {
                                        <tr>
                                            <td>@row["DoctorId"]</td>
                                            <td>@row["Name"]</td>
                                            <td>@row["Phone"]</td>
                                            <td>@row["Email"]</td>
                                            <td>@row["Qualification"]</td>
                                            <td>@row["Specialization"]</td>
                                            <td>@(Convert.ToBoolean(row["IsActive"]) ? "Yes" : "No")</td>
                                            <td>@Convert.ToDateTime(row["Created"]).ToString("dd-MM-yyyy")</td>
                                            <td>
                                                <a class="btn btn-warning btn-sm text-light"
                                                   asp-controller="Doctor"
                                                   asp-action="DoctorAdd_Edit"
                                                   asp-route-id="@row["DoctorID"]">
                                                    Edit
                                                </a>
                                                <a class="btn btn-danger btn-sm text-light"
                                                   asp-controller="Doctor"
                                                   asp-action="DoctorDelete"
                                                   asp-route-id="@row["DoctorID"]"
                                                   onclick="return confirm('Are you sure you want to delete this doctor?');">
                                                    Delete
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </section>

</main>
