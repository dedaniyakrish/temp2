@model HospitalManagement.Models.DoctorModel

<main id="main" class="main ms-1">

    <section class="section pt-5 mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-5">

                <div class="card shadow">
                    <div class="card-body">
                        <h5 class="card-title text-primary text-center">Add Doctor</h5>

                        <form asp-action="DoctorAdd_Edit" method="post">
                            <input type="hidden" asp-for="DoctorID" />
                            <div class="mb-3">
                                <label asp-for="Name" class="form-label"></label>
                                <input asp-for="Name" class="form-control" placeholder="Enter full name">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Email" class="form-label"></label>
                                <input asp-for="Email" class="form-control" placeholder="Enter email address">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Phone" class="form-label"></label>
                                <input asp-for="Phone" class="form-control" placeholder="Enter contact number">
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Specialization" class="form-label"></label>
                                <input asp-for="Specialization" class="form-control" placeholder="e.g. Cardiologist">
                                <span asp-validation-for="Specialization" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Qualification" class="form-label"></label>
                                <input asp-for="Qualification" class="form-control" placeholder="Enter qualification">
                                <span asp-validation-for="Qualification" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="IsActive" class="form-label"></label>
                                <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                            </div>

                            <input type="hidden" asp-for="UserID" value="1" />
                            <div class="d-flex justify-content-between">
                                <button type="submit" class="btn btn-success">Save</button>
                                <a asp-action="DoctorList" class="btn btn-secondary">Cancel</a>
                            </div>
                        </form>

                    </div>
                </div>

            </div>
        </div>
    </section>

</main>
