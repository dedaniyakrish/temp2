@model DataTable
@using System.Data

<div class="page-header text-center">
    <div class="container">
        <h1 class="page-title">
            <i class="bi bi-calendar-check me-3"></i>
            Appointment Management
        </h1>
        <p class="page-subtitle">View and manage all patient appointments</p>
    </div>
</div>

<div class="search-filter-bar animate-fade-in-up">
    <div class="search-input">
        <div class="input-group">
            <span class="input-group-text"><i class="bi bi-search"></i></span>
            <input type="text" class="form-control" placeholder="Search appointments..." id="searchInput">
        </div>
    </div>
    <a asp-controller="Appointment" asp-action="AppointmentAdd_Edit" class="btn btn-success">
        <i class="bi bi-plus-circle me-2"></i>
        Schedule New Appointment
    </a>
</div>

<div class="row animate-slide-in-right">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div>
                                <h5 class="card-title mb-1">All Appointments</h5>
                                <p class="text-muted mb-0">Total: @Model.Rows.Count appointments</p>
                            </div>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-modern" id="appointmentsTable">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Patient & Doctor</th>
                                        <th>Date</th>
                                        <th>Status</th>
                                        <th>Description</th>
                                        <th>Amount</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Rows.Count == 0)
                                    {
                                        <tr>
                                            <td colspan="7" class="text-center py-5">
                                                <div class="empty-state">
                                                    <i class="bi bi-calendar-x"></i>
                                                    <h3>No Appointments Found</h3>
                                                    <p>Start by scheduling your first appointment.</p>
                                                    <a asp-controller="Appointment" asp-action="AppointmentAdd_Edit" class="btn btn-success">
                                                        <i class="bi bi-plus-circle me-2"></i>Schedule First Appointment
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                    @foreach (DataRow row in Model.Rows)
                                    {
                                        <tr>
                                            <td>@row["AppointmentID"]</td>
                                            <td>
                                                <div class="mb-2">
                                                    <div class="d-flex align-items-center mb-1">
                                                        <div class="icon-wrapper me-2" style="width: 30px; height: 30px;">
                                                            <i class="bi bi-person"></i>
                                                        </div>
                                                        <span class="fw-semibold">Patient ID: @row["PatientID"]</span>
                                                    </div>
                                                    <div class="d-flex align-items-center">
                                                        <div class="icon-wrapper me-2" style="width: 30px; height: 30px; background: linear-gradient(135deg, var(--success-500), var(--success-400));">
                                                            <i class="bi bi-person-badge text-white"></i>
                                                        </div>
                                                        <span class="fw-semibold">Dr. ID: @row["DoctorID"]</span>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <div>
                                                    <div class="fw-semibold">@Convert.ToDateTime(row["AppointmentDate"]).ToString("MMM dd, yyyy")</div>
                                                    <small class="text-muted">@Convert.ToDateTime(row["AppointmentDate"]).ToString("hh:mm tt")</small>
                                                </div>
                                            </td>
                                            <td>
                                                @{
                                                    var status = row["AppointmentStatus"].ToString();
                                                    var statusClass = status switch {
                                                        "Completed" => "status-badge" + " " + "status-active",
                                                        "Pending" => "status-badge" + " " + "bg-warning text-dark",
                                                        "Cancelled" => "status-badge" + " " + "bg-danger text-white",
                                                        _ => "status-badge"
                                                    };
                                                    var statusIcon = status switch {
                                                        "Completed" => "bi-check-circle",
                                                        "Pending" => "bi-clock",
                                                        "Cancelled" => "bi-x-circle",
                                                        _ => "bi-question-circle"
                                                    };
                                                }
                                                <span class="@statusClass">
                                                    <i class="@statusIcon me-1"></i>@status
                                                </span>
                                            </td>
                                            <td>
                                                <span class="text-muted">@(string.IsNullOrEmpty(row["Description"]?.ToString()) ? "No description" : row["Description"].ToString())</span>
                                            </td>
                                            <td>
                                                @if (row["TotalConsultedAmount"] != DBNull.Value && row["TotalConsultedAmount"] != null)
                                                {
                                                    <span class="fw-semibold text-success">$@row["TotalConsultedAmount"]</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Not set</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="action-buttons">
                                                    <a class="btn btn-warning btn-icon"
                                                   asp-controller="Appointment"
                                                   asp-action="AppointmentAdd_Edit"
                                                       asp-route-id="@row["AppointmentID"]"
                                                       title="Edit Appointment">
                                                        <i class="bi bi-pencil"></i>
                                                </a>
                                                    <a class="btn btn-danger btn-icon"
                                                   asp-controller="Appointment"
                                                   asp-action="AppointmentDelete"
                                                   asp-route-id="@row["AppointmentID"]"
                                                       onclick="return confirm('Are you sure you want to delete this appointment?');"
                                                       title="Delete Appointment">
                                                        <i class="bi bi-trash"></i>
                                                </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
</div>

@section Scripts {
    <script>
        // Search functionality
        document.getElementById('searchInput').addEventListener('keyup', function() {
            const searchTerm = this.value.toLowerCase();
            const tableRows = document.querySelectorAll('#appointmentsTable tbody tr');
            
            tableRows.forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(searchTerm) ? '' : 'none';
            });
        });
    </script>
}
