@model HospitalManagement.Models.AppointmentModel
<main id="main" class="main ms-1">

    <section class="section pt-5 mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">

                <div class="card shadow">
                    <div class="card-body">
                        <h5 class="card-title text-primary text-center">Add Appointment</h5>

                        <form asp-action="AppointmentAdd_Edit" method="post">
                            <input type="hidden" asp-for="AppointmentID" />
                            <div class="mb-3">
                                <label asp-for="DoctorID" class="form-label"></label>
                                <select asp-for="DoctorID" class="form-select">
                                    <option value="">Select doctor</option>
                                    @foreach (var doc in (IEnumerable<HospitalManagement.Models.DoctorModel>)ViewBag.Doctors)
                                    {
                                        <option value="@doc.DoctorID">@doc.Name</option>
                                    }
                                </select>
                                <span asp-validation-for="DoctorID" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="PatientID" class="form-label"></label>
                                <select asp-for="PatientID" class="form-select">
                                    <option value="">Select patient</option>
                                    @foreach (var pat in (IEnumerable<HospitalManagement.Models.PatientModel>)ViewBag.Patients)
                                    {
                                        <option value="@pat.PatientID">@pat.Name</option>
                                    }
                                </select>
                                <span asp-validation-for="PatientID" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="AppointmentDate" class="form-label"></label>
                                <input asp-for="AppointmentDate" class="form-control" type="datetime-local" />
                                <span asp-validation-for="AppointmentDate" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="AppointmentStatus" class="form-label"></label>
                                <select asp-for="AppointmentStatus" class="form-select">
                                    <option value="">Select status</option>
                                    <option value="Pending">Pending</option>
                                    <option value="Completed">Completed</option>
                                    <option value="Cancelled">Cancelled</option>
                                </select>
                                <span asp-validation-for="AppointmentStatus" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Description" class="form-label"></label>
                                <textarea asp-for="Description" class="form-control" rows="2"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="SpecialRemarks" class="form-label"></label>
                                <textarea asp-for="SpecialRemarks" class="form-control" rows="2"></textarea>
                                <span asp-validation-for="SpecialRemarks" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="TotalConsultedAmount" class="form-label"></label>
                                <input asp-for="TotalConsultedAmount" class="form-control" type="number" step="0.01" />
                                <span asp-validation-for="TotalConsultedAmount" class="text-danger"></span>
                            </div>
                            <input type="hidden" asp-for="UserID" value="1" />
                            <div class="d-flex justify-content-between">
                                <button type="submit" class="btn btn-success">Save</button>
                                <a asp-action="AppointmentList" class="btn btn-secondary">Cancel</a>
                            </div>
                        </form>

                    </div>
                </div>

            </div>
        </div>
    </section>

</main>
