@model HospitalManagement.Models.AppointmentModel

<div class="page-header text-center">
    <div class="container">
        <h1 class="page-title">
            <i class="bi bi-calendar-plus me-3"></i>
            @(Model.AppointmentID > 0 ? "Edit Appointment" : "Schedule New Appointment")
        </h1>
        <p class="page-subtitle">@(Model.AppointmentID > 0 ? "Update appointment details" : "Book a new appointment for patient consultation")</p>
    </div>
</div>

<div class="row justify-content-center animate-fade-in-up">
    <div class="col-lg-8 col-xl-6">
        <div class="form-container">
                    <div class="card-body">
                        <form asp-action="AppointmentAdd_Edit" method="post">
                            <input type="hidden" asp-for="AppointmentID" />
                            
                            <div class="form-section">
                                <h3 class="form-section-title">
                                    <i class="bi bi-people"></i>
                                    Appointment Details
                                </h3>
                                
                                <div class="row">
                                    <div class="col-md-6 mb-4">
                                <label asp-for="DoctorID" class="form-label"></label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="bi bi-person-badge"></i></span>
                                            <select asp-for="DoctorID" class="form-select">
                                                <option value="">Select doctor</option>
                                                @foreach (var doc in (IEnumerable<HospitalManagement.Models.DoctorModel>)ViewBag.Doctors)
                                                {
                                                    <option value="@doc.DoctorID">Dr. @doc.Name</option>
                                                }
                                            </select>
                                        </div>
                                <span asp-validation-for="DoctorID" class="text-danger"></span>
                            </div>
                                    
                                    <div class="col-md-6 mb-4">
                                <label asp-for="PatientID" class="form-label"></label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="bi bi-person"></i></span>
                                            <select asp-for="PatientID" class="form-select">
                                                <option value="">Select patient</option>
                                                @foreach (var pat in (IEnumerable<HospitalManagement.Models.PatientModel>)ViewBag.Patients)
                                                {
                                                    <option value="@pat.PatientID">@pat.Name</option>
                                                }
                                            </select>
                                        </div>
                                <span asp-validation-for="PatientID" class="text-danger"></span>
                            </div>
                                </div>
                                
                                <div class="row">
                                    <div class="col-md-6 mb-4">
                                <label asp-for="AppointmentDate" class="form-label"></label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="bi bi-calendar-event"></i></span>
                                            <input asp-for="AppointmentDate" class="form-control" type="datetime-local" />
                                        </div>
                                <span asp-validation-for="AppointmentDate" class="text-danger"></span>
                            </div>
                                    
                                    <div class="col-md-6 mb-4">
                                <label asp-for="AppointmentStatus" class="form-label"></label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="bi bi-check-circle"></i></span>
                                            <select asp-for="AppointmentStatus" class="form-select">
                                                <option value="">Select status</option>
                                                <option value="Pending">Pending</option>
                                                <option value="Completed">Completed</option>
                                                <option value="Cancelled">Cancelled</option>
                                            </select>
                                        </div>
                                <span asp-validation-for="AppointmentStatus" class="text-danger"></span>
                            </div>
                                </div>
                                
                                <div class="mb-4">
                                    <label asp-for="TotalConsultedAmount" class="form-label"></label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-currency-dollar"></i></span>
                                        <input asp-for="TotalConsultedAmount" class="form-control" type="number" step="0.01" placeholder="0.00" />
                                    </div>
                                    <span asp-validation-for="TotalConsultedAmount" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="form-section">
                                <h3 class="form-section-title">
                                    <i class="bi bi-file-text"></i>
                                    Additional Information
                                </h3>
                                
                                <div class="mb-4">
                                <label asp-for="Description" class="form-label"></label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-file-text"></i></span>
                                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Describe the reason for appointment..."></textarea>
                                    </div>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                                
                                <div class="mb-4">
                                <label asp-for="SpecialRemarks" class="form-label"></label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-exclamation-triangle"></i></span>
                                        <textarea asp-for="SpecialRemarks" class="form-control" rows="3" placeholder="Any special instructions or remarks..."></textarea>
                                    </div>
                                <span asp-validation-for="SpecialRemarks" class="text-danger"></span>
                            </div>
                            </div>
                            
                            <input type="hidden" asp-for="UserID" value="1" />
                            
                            <div class="action-buttons">
                                <button type="submit" class="btn btn-success px-6">
                                    <i class="bi bi-check-circle me-2"></i>
                                    @(Model.AppointmentID > 0 ? "Update Appointment" : "Schedule Appointment")
                                </button>
                                <a asp-action="AppointmentList" class="btn btn-secondary px-6">
                                    <i class="bi bi-arrow-left me-2"></i>
                                    Back to List
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
</div>
