@model DataTable
@using System.Data

<style>
    table td,
    table th {
    white-space: nowrap;
    vertical-align: middle;
    }
</style>

<main id="main" class="main ms-1">

    <span class="text-danger">@TempData["ErrorMessage"]</span>
    <section class="section pt-5 mt-4">
        <div class="row">
            <div class="col-12">

                <div class="card shadow">
                    <div class="card-body">
                        <h5 class="card-title text-primary">Patient List</h5>

                        <div class="mb-3 text-end">
                            <a asp-controller="Patient" asp-action="PatientAddEdit" class="btn btn-success btn-sm">
                                Add New
                            </a>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-bordered table-hover text-center align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>#</th>
                                        <th>Name</th>
                                        <th>DOB</th>
                                        <th>Gender</th>
                                        <th>Email</th>
                                        <th>Phone</th>
                                        <th>Address</th>
                                        <th>City</th>
                                        <th>State</th>
                                        <th>Created</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (DataRow row in Model.Rows)
                                    {
                                        <tr>
                                            <td>@row["PatientID"]</td>
                                            <td>@row["Name"]</td>
                                            <td>@row["DateOfBirth"]</td>
                                            <td>@row["Gender"]</td>
                                            <td>@row["Email"]</td>
                                            <td>@row["Phone"]</td>
                                            <td>@row["Address"]</td>
                                            <td>@row["City"]</td>
                                            <td>@row["State"]</td>
                                            <td>@row["Created"]</td>
                                            <td>
                                                <a class="btn btn-warning btn-sm text-light"
                                                   asp-controller="Patient"
                                                   asp-action="PatientAddEdit"
                                                   asp-route-id="@row["PatientID"]">
                                                    Edit
                                                </a>
                                                <a class="btn btn-danger btn-sm text-light"
                                                   asp-controller="Patient"
                                                   asp-action="PatientDelete"
                                                   asp-route-id="@row["PatientID"]"
                                                   onclick="return confirm('Are you sure you want to delete this patient?');">
                                                    Delete
                                                </a>
                                                <div class="mb-4">

                                                    @if (TempData["Sucessfully"] != null)
                                                    {
                                                        <div class="alert alert-success"> @TempData["Sucessfully"]</div>
                                                    }
                                                    @if (TempData["Unsucessfully"] != null)
                                                    {
                                                        <div class="alert alert-danger"> @TempData["Unsucessfully"]</div>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </section>

</main>
