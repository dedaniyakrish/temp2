@model DataTable
@using System.Data

<div class="page-header text-center">
    <div class="container">
        <h1 class="page-title">
            <i class="bi bi-people me-3"></i>
            Patient Management
        </h1>
        <p class="page-subtitle">Manage all registered patients in the system</p>
    </div>
</div>

<div class="search-filter-bar animate-fade-in-up">
    <div class="search-input">
        <div class="input-group">
            <span class="input-group-text"><i class="bi bi-search"></i></span>
            <input type="text" class="form-control" placeholder="Search patients by name, email, or phone..." id="searchInput">
        </div>
    </div>
    <a asp-controller="Patient" asp-action="PatientAddEdit" class="btn btn-success">
        <i class="bi bi-plus-circle me-2"></i>
        Add New Patient
    </a>
</div>

<div class="row animate-slide-in-right">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div>
                                <h5 class="card-title mb-1">Registered Patients</h5>
                                <p class="text-muted mb-0">Total: @Model.Rows.Count patients</p>
                            </div>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-modern" id="patientsTable">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th>Date of Birth</th>
                                        <th>Gender</th>
                                        <th>Email</th>
                                        <th>Phone</th>
                                        <th>Location</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Rows.Count == 0)
                                    {
                                        <tr>
                                            <td colspan="8" class="text-center py-5">
                                                <div class="empty-state">
                                                    <i class="bi bi-person-x"></i>
                                                    <h3>No Patients Found</h3>
                                                    <p>Start by adding your first patient to the system.</p>
                                                    <a asp-controller="Patient" asp-action="PatientAddEdit" class="btn btn-success">
                                                        <i class="bi bi-plus-circle me-2"></i>Add First Patient
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                    @foreach (DataRow row in Model.Rows)
                                    {
                                        <tr>
                                            <td>@row["PatientID"]</td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="icon-wrapper me-3" style="width: 40px; height: 40px;">
                                                        <i class="bi bi-person"></i>
                                                    </div>
                                                    <div>
                                                        <div class="fw-semibold">@row["Name"]</div>
                                                        <small class="text-muted">ID: @row["PatientID"]</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="fw-medium">@Convert.ToDateTime(row["DateOfBirth"]).ToString("MMM dd, yyyy")</span>
                                                <br>
                                                <small class="text-muted">Age: @(DateTime.Now.Year - Convert.ToDateTime(row["DateOfBirth"]).Year) years</small>
                                            </td>
                                            <td>@row["Gender"]</td>
                                            <td>
                                                <div>
                                                    <div class="fw-medium">@row["Email"]</div>
                                                    <small class="text-muted">@row["Phone"]</small>
                                                </div>
                                            </td>
                                            <td>@row["Phone"]</td>
                                            <td>
                                                <div>
                                                    <div class="fw-medium">@row["City"]</div>
                                                    <small class="text-muted">@row["State"]</small>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="status-badge status-active">
                                                    <i class="bi bi-check-circle me-1"></i>Active
                                                </span>
                                            </td>
                                            <td>
                                                <div class="action-buttons">
                                                    <a class="btn btn-warning btn-icon"
                                                   asp-controller="Patient"
                                                   asp-action="PatientAddEdit"
                                                       asp-route-id="@row["PatientID"]"
                                                       title="Edit Patient">
                                                        <i class="bi bi-pencil"></i>
                                                </a>
                                                    <a class="btn btn-danger btn-icon"
                                                   asp-controller="Patient"
                                                   asp-action="PatientDelete"
                                                   asp-route-id="@row["PatientID"]"
                                                       onclick="return confirm('Are you sure you want to delete this patient?');"
                                                       title="Delete Patient">
                                                        <i class="bi bi-trash"></i>
                                                </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
</div>

@section Scripts {
    <script>
        // Search functionality
        document.getElementById('searchInput').addEventListener('keyup', function() {
            const searchTerm = this.value.toLowerCase();
            const tableRows = document.querySelectorAll('#patientsTable tbody tr');
            
            tableRows.forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(searchTerm) ? '' : 'none';
            });
        });
    </script>
}
