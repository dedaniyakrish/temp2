@model HospitalManagement.Models.PatientModel;

<div class="page-header text-center">
    <div class="container">
        <h1 class="page-title">
            <i class="bi bi-person-plus me-3"></i>
            @(Model.PatientID > 0 ? "Edit Patient" : "Add New Patient")
        </h1>
        <p class="page-subtitle">@(Model.PatientID > 0 ? "Update patient information" : "Enter patient details to register them in the system")</p>
    </div>
</div>

<div class="row justify-content-center animate-fade-in-up">
    <div class="col-lg-8 col-xl-6">
        <div class="form-container">
            <div class="card-body">
                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
                <form asp-action="PatientAddEdit" method="post" class="needs-validation" novalidate>
                    <input type="hidden" asp-for="PatientID" />
                    
                    <div class="form-section">
                        <h3 class="form-section-title">
                            <i class="bi bi-person-circle"></i>
                            Personal Information
                        </h3>
                        
                        <div class="row">
                            <div class="col-md-6 mb-4">
                        <label asp-for="Name" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-person"></i></span>
                                    <input asp-for="Name" class="form-control" placeholder="Enter full name" required />
                                </div>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                            
                            <div class="col-md-6 mb-4">
                        <label asp-for="DateOfBirth" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-calendar"></i></span>
                                    <input asp-for="DateOfBirth" class="form-control" type="date" required />
                                </div>
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>
                        </div>
                        
                        <div class="mb-4">
                        <label asp-for="Gender" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-gender-ambiguous"></i></span>
                                <select asp-for="Gender" class="form-select" required>
                                    <option value="">Select gender</option>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                    <option value="Other">Other</option>
                                </select>
                            </div>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>
                    </div>
                    
                    <div class="form-section">
                        <h3 class="form-section-title">
                            <i class="bi bi-telephone"></i>
                            Contact Information
                        </h3>
                        
                        <div class="row">
                            <div class="col-md-6 mb-4">
                        <label asp-for="Email" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                    <input asp-for="Email" class="form-control" placeholder="patient@example.com" required />
                                </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                            
                            <div class="col-md-6 mb-4">
                        <label asp-for="Phone" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-phone"></i></span>
                                    <input asp-for="Phone" class="form-control" placeholder="+1 (555) 123-4567" required />
                                </div>
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                        </div>
                    </div>
                    
                    <div class="form-section">
                        <h3 class="form-section-title">
                            <i class="bi bi-geo-alt"></i>
                            Address Information
                        </h3>
                        
                        <div class="mb-4">
                        <label asp-for="Address" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-house"></i></span>
                                <textarea asp-for="Address" class="form-control" rows="3" placeholder="Enter complete address"></textarea>
                            </div>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-4">
                        <label asp-for="City" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-building"></i></span>
                                    <input asp-for="City" class="form-control" placeholder="Enter city" />
                                </div>
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                            
                            <div class="col-md-6 mb-4">
                        <label asp-for="State" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-map"></i></span>
                                    <input asp-for="State" class="form-control" placeholder="Enter state" />
                                </div>
                        <span asp-validation-for="State" class="text-danger"></span>
                    </div>
                        </div>
                        
                        <div class="mb-4">
                            <div class="form-check d-flex align-items-center">
                                <input asp-for="IsActive" class="form-check-input me-3" type="checkbox" style="transform: scale(1.2);" />
                                <label asp-for="IsActive" class="form-check-label fw-semibold">Active Patient</label>
                            </div>
                        </div>
                    </div>
                    
                    <input type="hidden" asp-for="UserID" value="1" />
                    
                    <div class="action-buttons mt-6">
                        <button type="submit" class="btn btn-success px-6">
                            <i class="bi bi-check-circle me-2"></i>
                            @(Model.PatientID > 0 ? "Update Patient" : "Save Patient")
                        </button>
                        <a asp-action="PatientList" class="btn btn-secondary px-6">
                            <i class="bi bi-arrow-left me-2"></i>
                            Back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
