@model DataTable
@using System.Data

<div class="page-header text-center">
    <div class="container">
        <h1 class="page-title">
            <i class="bi bi-building me-3"></i>
            Department Management
        </h1>
        <p class="page-subtitle">Manage hospital departments and their information</p>
    </div>
</div>

<div class="search-filter-bar animate-fade-in-up">
    <div class="search-input">
        <div class="input-group">
            <span class="input-group-text"><i class="bi bi-search"></i></span>
            <input type="text" class="form-control" placeholder="Search departments..." id="searchInput">
        </div>
    </div>
    <a asp-controller="Department" asp-action="DepartmentAdd_Edit" class="btn btn-success">
        <i class="bi bi-plus-circle me-2"></i>
        Add New Department
    </a>
</div>

<div class="container animate-slide-in-right">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div>
                            <h5 class="card-title mb-1">Hospital Departments</h5>
                            <p class="text-muted mb-0">Total: @Model.Rows.Count departments</p>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-modern" id="departmentsTable">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Department Name</th>
                                    <th>Description</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Rows.Count == 0)
                                {
                                    <tr>
                                        <td colspan="5" class="text-center py-5">
                                            <div class="empty-state">
                                                <i class="bi bi-building"></i>
                                                <h3>No Departments Found</h3>
                                                <p>Start by creating your first department.</p>
                                                <a asp-controller="Department" asp-action="DepartmentAdd_Edit" class="btn btn-success">
                                                    <i class="bi bi-plus-circle me-2"></i>Add First Department
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                                @foreach (DataRow row in Model.Rows)
                                {
                                    <tr>
                                        <td>@row["DepartmentID"]</td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="icon-wrapper me-3" style="width: 40px; height: 40px; background: linear-gradient(135deg, var(--success-500), var(--success-400));">
                                                    <i class="bi bi-building text-white"></i>
                                                </div>
                                                <div>
                                                    <div class="fw-semibold">@row["DepartmentName"]</div>
                                                    <small class="text-muted">Medical Department</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="text-muted">@(string.IsNullOrEmpty(row["Description"]?.ToString()) ? "No description" : row["Description"].ToString())</span>
                                        </td>
                                        <td>
                                            @if (Convert.ToBoolean(row["IsActive"]))
                                            {
                                                <span class="status-badge status-active">
                                                    <i class="bi bi-check-circle me-1"></i>Active
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="status-badge status-inactive">
                                                    <i class="bi bi-x-circle me-1"></i>Inactive
                                                </span>
                                            }
                                        </td>
                                        <td>
                                            <div class="action-buttons">
                                                <a class="btn btn-warning btn-icon"
                                               asp-controller="Department"
                                               asp-action="DepartmentAdd_Edit"
                                                   asp-route-id="@row["DepartmentID"]"
                                                   title="Edit Department">
                                                    <i class="bi bi-pencil"></i>
                                            </a>
                                                <a class="btn btn-danger btn-icon"
                                               asp-controller="Department"
                                               asp-action="DepartmentDelete"
                                               asp-route-id="@row["DepartmentID"]"
                                                   onclick="return confirm('Are you sure you want to delete this department?');"
                                                   title="Delete Department">
                                                    <i class="bi bi-trash"></i>
                                            </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Search functionality
        document.getElementById('searchInput').addEventListener('keyup', function() {
            const searchTerm = this.value.toLowerCase();
            const tableRows = document.querySelectorAll('#departmentsTable tbody tr');
            
            tableRows.forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(searchTerm) ? '' : 'none';
            });
        });
    </script>
}