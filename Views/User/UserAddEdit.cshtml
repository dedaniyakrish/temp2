@model HospitalManagement.Models.UserModel

<div class="page-header text-center">
    <div class="container">
        <h1 class="page-title">
            <i class="bi bi-person-gear me-3"></i>
            @(Model.UserID > 0 ? "Edit User" : "Add New User")
        </h1>
        <p class="page-subtitle">@(Model.UserID > 0 ? "Update user information" : "Create a new system user account")</p>
    </div>
</div>

<div class="row justify-content-center animate-fade-in-up">
    <div class="col-lg-6">
        <div class="form-container">
                    <div class="card-body">
                        <form asp-action="UserAddEdit" method="post">
                            <input type="hidden" asp-for="UserID" />
                            
                            <div class="form-section">
                                <h3 class="form-section-title">
                                    <i class="bi bi-person-circle"></i>
                                    Account Information
                                </h3>
                                
                                <div class="mb-4">
                                <label asp-for="UserName" class="form-label"></label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-person"></i></span>
                                        <input asp-for="UserName" class="form-control" placeholder="Enter username" />
                                    </div>
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                                
                                <div class="mb-4">
                                <label asp-for="Email" class="form-label"></label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                        <input asp-for="Email" class="form-control" placeholder="user@hospital.com" />
                                    </div>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                                
                                <div class="mb-4">
                                <label asp-for="MobileNo" class="form-label"></label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-phone"></i></span>
                                        <input asp-for="MobileNo" class="form-control" placeholder="+1 (555) 123-4567" />
                                    </div>
                                <span asp-validation-for="MobileNo" class="text-danger"></span>
                            </div>
                                
                                <div class="mb-4">
                                <label asp-for="Password" class="form-label"></label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-lock"></i></span>
                                        <input asp-for="Password" class="form-control" type="password" placeholder="Enter secure password" />
                                    </div>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                                
                                <div class="mb-4">
                                    <div class="form-check d-flex align-items-center">
                                        <input asp-for="IsActive" class="form-check-input me-3" type="checkbox" style="transform: scale(1.2);" />
                                        <label asp-for="IsActive" class="form-check-label fw-semibold">Active User</label>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="action-buttons">
                                <button type="submit" class="btn btn-success px-6">
                                    <i class="bi bi-check-circle me-2"></i>
                                    @(Model.UserID > 0 ? "Update User" : "Create User")
                                </button>
                                <a asp-action="UserList" class="btn btn-secondary px-6">
                                    <i class="bi bi-arrow-left me-2"></i>
                                    Back to List
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
</div>
