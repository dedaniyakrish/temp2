@model DataTable
@using System.Data

<style>
    table td,
    table th {
        white-space: nowrap; 
        vertical-align: middle;
    }
</style>

<main id="main" class="main ms-1">

    <section class="section pt-5 mt-4">
        <div class="row">
            <div class="col-12">

                <div class="card shadow">
                    <div class="card-body">
                        <h5 class="card-title text-primary">User List</h5>

                        <div class="table-responsive">
                            <table class="table table-bordered table-hover text-center align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>#</th>
                                        <th>User Name</th>
                                        <th>Email</th>
                                        <th>MobileNo</th>
                                        <th>IsActive</th>
                                        <th>Created</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (DataRow row in Model.Rows)
                                    {
                                        <tr>
                                            <td>@row["UserID"]</td>
                                            <td>@row["UserName"]</td>
                                            <td>@row["Email"]</td>
                                            <td>@row["MobileNo"]</td>
                                            <td>@(Convert.ToBoolean(row["IsActive"]) ? "Yes" : "No")</td>
                                            <td>@Convert.ToDateTime(row["Created"]).ToString("dd-MM-yyyy")</td>
                                            <td>
                                                <a class="btn btn-warning btn-sm text-light"
                                                   asp-controller="User"
                                                   asp-action="UserAddEdit"
                                                   asp-route-id="@row["UserID"]">
                                                    Edit
                                                </a>
                                                <a class="btn btn-danger btn-sm text-light"
                                                   asp-controller="User"
                                                   asp-action="UserDelete"
                                                   asp-route-id="@row["UserID"]"
                                                   onclick="return confirm('Are you sure you want to delete this user?');">
                                                    Delete
                                                </a>
                                            </td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </section>

</main>
